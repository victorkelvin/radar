{
  "name": "radar",
  "version": "1.2.3",
  "description": "Michael Higino monitor tool",
  "main": "main.js",
  "author": "Victor Kelvin",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "typestart": "npm run build && electron .",
    "build-installer": "electron-builder",
    "start": "electron --trace-warnings .",
    "test": "node test.js"
  },
  "dependencies": {
    "@adiwajshing/baileys": "github:WhiskeySockets/Baileys",
    "got": "9.6.0",
    "qrcode": "^1.5.1"
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "RadarApp",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "uninstallDisplayName": "uninstall-RadarApp"
    },
    "directories": {
      "output": "dist"
    }
  }
}
